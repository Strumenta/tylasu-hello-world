{
	"name": "tylasu-hello-world",
	"description": "Hello World with Tylasu and ANTLR4.",
	"author": "Strumenta s.r.l.",
	"publisher": "strumenta",
	"version": "0.1.0",
	"license": "Apache 2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/strumenta/tylasu-hello-world"
	},
	"engines": {
		"node": "*"
	},
	"files": [
		"dist",
		"src/**/*.ts",
		"src/**/*.g4",
		"package.json"
	],
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"dependencies": {
		"@strumenta/tylasu": "^1.1.4",
		"antlr4ts": "^0.5.0-alpha.4"
	},
	"devDependencies": {
		"@tsconfig/recommended": "^1.0.1",
		"@types/chai": "^4.2.11",
	    "@types/mocha": "^5.2.7",
	    "@types/node": "^13.9.8",
		"@typescript-eslint/eslint-plugin": "^4.11.0",
		"@typescript-eslint/parser": "^4.11.0",
		"antlr4ts-cli": "^0.5.0-alpha.4",
		"chai": "^4.2.0",
		"eslint": "^7.16.0",
		"merge-options": "^2.0.0",
		"mocha": "^6.2.2",
		"rimraf": "^3.0.0",
		"ts-loader": "^6.2.2",
		"ts-node": "^8.8.2",
		"typescript": "^3.8.3"
	},
	"scripts": {
		"clean": "rimraf dist && rimraf strumenta-sql-parser-v*.tgz",
		"build": "yarn run build-parser && tsc",
		"build-parser": "antlr4ts -o src/parser -Xexact-output-dir -visitor src/grammar/SimpleLangLexer.g4 src/grammar/SimpleLangParser.g4",
		"lint": "eslint src",
		"test": "mocha -r ts-node/register tests/**/*.test.ts",		
		"prepare-dist": "cp package.json dist && cp -r src/* dist && rimraf dist/grammar/gen",
		"dist": "yarn run clean && yarn run lint && yarn run build && yarn run test && yarn pack"
	}
}
